<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/siyah"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/vale_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"></TextView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/scrollView"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_back"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"

        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/kart_no"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/beyaz"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="12"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/oval_icon">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 AT 130"
                android:textColor="@color/beyaz"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>




            <TextView
                android:id="@+id/ad_soyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ömer Nasuhi Aydemir"
                android:textSize="16sp"
                android:textColor="@color/beyaz"
                android:textAlignment="center"

                android:layout_gravity="center"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/park_yeri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loca"
                android:textSize="16sp"
                android:textColor="@color/beyaz"
                android:textAlignment="center"

                android:layout_gravity="center"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/tel_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loca"
                android:textSize="16sp"
                android:textColor="@color/beyaz"
                android:textAlignment="center"

                android:layout_gravity="center"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/tarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loca"
                android:textSize="16sp"
                android:textColor="@color/beyaz"
                android:textAlignment="center"

                android:layout_gravity="center"
                android:textStyle="normal">

            </TextView>



        </LinearLayout>

        <Button

            android:id="@+id/hasar_durumu_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/hasar_icon"></Button>



    </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ücretli_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ücretli"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:textColor="@color/beyaz"></TextView>

            <Switch
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:track="@drawable/mavi_button_back"
                android:layout_gravity="center">

            </Switch>

            <TextView
                android:id="@+id/ücretsiz_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ücretsiz"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/beyaz"></TextView>


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <EditText
            android:id="@+id/vale_ücreti"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/edittext_back"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:hint="Vale ücreti"
            android:textColor="@color/beyaz"
            android:gravity="center"
            android:textColorHint="@color/beyaz"></EditText>



        <Spinner
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/para_birimi"
            android:entries="@array/para_birimleri"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_back"
            android:textColor="#FFFFFF"/>



    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <LinearLayout
                android:id="@+id/ekstra_gir_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_back">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/yeni_arac_icon"
                    android:layout_gravity="center"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ekstra gir"
                    android:textColor="@color/beyaz"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"></TextView>



            </LinearLayout>





            <LinearLayout
                android:id="@+id/not_gir_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_back">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/yeni_arac_icon"
                    android:layout_gravity="center"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not"
                    android:textColor="@color/beyaz"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"></TextView>



            </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ekstra_layout"
            android:visibility="invisible"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ekstra_spinner"
                android:entries="@array/ekstra"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_back"
                android:textColor="#FFFFFF"/>





            <EditText
                android:id="@+id/ekstra_ücret_edittext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_back"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Ücret"
                android:inputType="number"
                android:padding="5dp"
                android:textColorHint="@color/beyaz"
                android:textColor="@color/beyaz"></EditText>




        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/not_layout"
            android:layout_weight="1"
            android:visibility="invisible"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/not_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/edittext_back"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Not gir"
                android:padding="5dp"

                android:layout_weight="1"
                android:textColorHint="@color/beyaz"
                android:textColor="@color/beyaz"></EditText>





        </LinearLayout>








    </LinearLayout>

    </ScrollView>





    <LinearLayout
        android:id="@+id/toplam_layout"
        android:background="@drawable/buton_back_1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toplam"
                android:textColor="@color/beyaz"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                ></TextView>

            <TextView
                android:id="@+id/toplam_ücret_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 TL"
                android:textColor="@color/beyaz"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"></TextView>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/beyaz"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"></ImageView>



        <Button
            android:id="@+id/teslimat_tamamla_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/mavi_button_back"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Teslimatı tamamla"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:textColor="@color/beyaz"></Button>




    </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hasar_layout"
            android:visibility="invisible"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buton_back_1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hasar durumu"
                        android:layout_weight="1"
                        android:textColor="@color/beyaz"
                        android:textStyle="bold"
                        android:textSize="22sp">

                    </TextView>



                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/saglam_icon">

                    </ImageView>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/hasarli_icon">

                    </ImageView>



                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">




                    <Button
                        android:id="@+id/b_9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="300dp"
                        android:background="@drawable/saglam_check_button"></Button>



                    <Button
                        android:id="@+id/b_10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="205dp"
                        android:layout_marginLeft="300dp"
                        android:background="@drawable/saglam_check_button"></Button>

                    <Button
                        android:id="@+id/b_11"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="300dp"
                        android:layout_marginLeft="300dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="125dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="90dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="160dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="220dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="220dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="140dp"
                        android:background="@drawable/saglam_check_button"></Button>


                    <Button
                        android:id="@+id/b_8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="210dp"
                        android:background="@drawable/saglam_check_button"></Button>

                    <ImageView
                        android:layout_width="320dp"
                        android:layout_height="255dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/hasar_araba"></ImageView>
                </FrameLayout>
            </LinearLayout>


            <Button
                android:id="@+id/hasar_layout_kapat_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tamam"
                android:layout_margin="10dp"
                android:background="@drawable/mavi_button_back"
                android:textColor="@color/beyaz">

            </Button>

        </LinearLayout>




    </FrameLayout>



</LinearLayout>