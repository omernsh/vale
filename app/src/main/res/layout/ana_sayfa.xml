<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/siyah"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AnaSayfa">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/oligark_logo">
        </ImageView>

        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">




            <ImageView
                android:id="@+id/teslimat_bekleyen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/teslimat_bekleyen"></ImageView>



            <TextView
                android:id="@+id/teslimat_bek_ar_sayisi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:text="3"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/beyaz"
                android:textSize="12sp"
                android:background="@drawable/kirmizi_oval"></TextView>




        </FrameLayout>



        <ImageView
            android:id="@+id/istekler"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bekleyen_arac_icon"></ImageView>



        <ImageView
            android:id="@+id/yeni_arac_kayit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yeni_arac_icon"></ImageView>

    </LinearLayout>


    <TextView
        android:id="@+id/vale_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"></TextView>



    <ListView
        android:divider="@android:color/transparent"
        android:id="@+id/kayÄ±tlar_listesi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>